@model IEnumerable<BoVoyageJJAN.Models.UserDemand>

@{
    Layout = "~/Areas/BackOffice/Views/Shared/_LayoutBO.cshtml";

    ViewBag.Title = "Index";
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-@TempData["MessageType"].ToString()">
        @TempData["Message"].ToString()
    </div>
}

<h2>Liste des demandes de contact</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Numéro de la demande")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Lastname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Firstname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mail)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Lastname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Firstname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Mail)
        </td>
        <td>
            @Html.ActionLink("Détails", "Details", new { id = item.ID }) |
            @Html.ActionLink("Supprimer", "Delete", new { id = item.ID })
        </td>
    </tr>
    }

</table>
