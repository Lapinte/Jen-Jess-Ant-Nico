@model IEnumerable<BoVoyageJJAN.Models.Reservation>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Customer.Lastname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Trip.Destination)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreditCardNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Insurance)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ParticipantNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ParticipantUnderTwelveNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Statut)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedAt)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.Lastname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Trip.Destination.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreditCardNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Insurance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParticipantNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParticipantUnderTwelveNumber)
            </td>
            <td>
                @switch (item.Statut)
                {
                    case 0:
                        <span>En attente</span>
                        break;
                    case 1:
                        <span>En Cours</span>
                        break;
                    case 2:
                        <span>Refusée</span>
                        break;
                    case 3:
                        <span>Acceptée</span>
                        break;
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                <div class="btn-group">
                    @Html.ActionLink(" ", "Details", new { id = item.ID }, new { @class = "btn btn-secondary fa fa-info", @title = "Détails" })
                    @Html.ActionLink(" ", "Confirm", new { id = item.ID }, new { @class = "btn btn-secondary fa fa-check-square", @title = "Confirmer" })
                    @Html.ActionLink(" ", "Delete", new { id = item.ID }, new { @class = "btn btn-secondary fa fa-trash", @title = "Annuler" })
                </div>
            </td>
        </tr>
    }

</table>
